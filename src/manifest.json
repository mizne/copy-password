{
  "name": "Copy Password",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "folder-24.png"
  },
  "icons": {
    "128": "folder-128.png"
  },
  "permissions": [
    "http://localhost/",
    "storage"
  ],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
